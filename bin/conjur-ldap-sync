#!/usr/bin/env ruby

require 'bundler/setup'

require 'optparse'
require 'methadone'
require 'conjur/ldap/sync.rb'

class App
  include Methadone::Main
  include Methadone::CLILogging

  main do
    Conjur::Ldap::Sync.run_sync
  end

  version Conjur::Ldap::Sync::VERSION

  use_log_level_option

  go!
end
